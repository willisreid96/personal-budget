        },
        "url": {
          "raw": "http://localhost:3000/api/budgets",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "budgets"]
        },
        "description": "Test case for missing required fields - should return error"
      }
